<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bl_widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/background_card_blue"
    android:minWidth="300dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_loi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="4dp"
            android:paddingBottom="4dp"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:drawableStartCompat="@drawable/ic_clock_regular"
            tools:drawableStart="@drawable/ic_clock_regular"
            tools:text="1 minute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/star_ratingbar"
                android:maxHeight="25dp"
                android:minHeight="0dp"
                android:numStars="5"
                android:progressDrawable="@drawable/star_ratingbar"
                tools:rating="3" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:textColor="#ffffff"
                android:textSize="11sp"
                tools:text="3" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/background_card_white"
        android:maxWidth="100dp">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:contentDescription="Start"
            android:scaleType="centerInside"
            android:src="@drawable/ic_circle_play_light"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tv_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            tools:text="EARN\n0.05" />
    </LinearLayout>
</FrameLayout>